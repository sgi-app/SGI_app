<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/default_padding"    
     >

    <ImageView
        android:id="@+id/imageViewContactsImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_person" />

    <TextView
        android:id="@+id/textViewContactsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/imageViewContactsImage"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewContactsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewContactsImage"
        android:layout_alignLeft="@+id/textViewContactsName"
        android:layout_alignRight="@+id/textViewContactsName"
        android:layout_marginBottom="5dp"
        android:singleLine="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textViewContactsExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewContactsImage"
        android:layout_alignParentRight="true"
        android:singleLine="true"
         android:layout_marginBottom="5dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>