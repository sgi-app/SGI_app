<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/imageViewNotiFileImage"
        android:layout_width="@dimen/list_item_image_width"
        android:layout_height="@dimen/list_item_content_height"
        android:background="@drawable/round_corner_left"
        android:padding="@dimen/default_padding"
        android:src="@drawable/ic_action_attachment" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:padding="@dimen/default_padding"
        android:background="@drawable/attachment_text_selector"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewNotiFileName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textViewNotiFileDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:text="Small Text"
             android:textAppearance="?android:attr/textAppearanceSmall" />

        <ProgressBar
            android:id="@+id/progressBarDownloadFile"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:indeterminate="true"
            android:layout_height="4dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewState"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/round_corner_right"
        android:padding="@dimen/default_padding"
        android:src="@drawable/ic_action_download" />

</LinearLayout>