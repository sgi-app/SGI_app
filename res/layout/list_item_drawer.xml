<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/drawer_item_layout_height"
    android:layout_margin="@dimen/drawer_item_layout_margin"
    android:gravity="center_vertical"
     >

    <ImageView
        android:id="@+id/drawer_list_item_image"
        android:layout_width="@dimen/drawer_item_image_width"
        android:layout_height="@dimen/drawer_item_content_height"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/drawer_list_item_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/drawer_item_content_height"
        android:layout_marginLeft="@dimen/drawer_item_maring_btwn_image_text"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>