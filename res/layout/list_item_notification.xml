<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:gravity="center_vertical"
    android:padding="@dimen/list_item_layout_padding" >

    <ImageView
        android:id="@+id/imageViewNotificationImage"
        android:layout_width="@dimen/list_item_image_width"
        android:layout_height="@dimen/list_item_content_height"
        android:contentDescription="@string/desc_noti_sender_image"
        android:src="@drawable/ic_action_notification" />

    <LinearLayout
        android:id="@+id/linearLayoutMotificationHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewNotificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/list_item_maring_btwn_image_text"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="All students d"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_maring_btwn_image_text"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewNotificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="12:40pm"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/imageViewNotificationState"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/desc_noti_state"
                android:src="@drawable/ic_file_done"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>