<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.siet.secure.sgi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
 
	<!-- GCM connects to Google Services. -->
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<!-- GCM requires a Google account. -->
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
 
<permission android:name="in.siet.secure.sgi.permission.C2D_MESSAGE"
    android:protectionLevel="signature" />
<uses-permission android:name="in.siet.secure.sgi.permission.C2D_MESSAGE" />
     
<!-- This app has permission to register and receive data message. -->
<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
       
         >
         <meta-data
    android:name="com.google.android.gms.version"
    android:value="@integer/google_play_services_version" />  
        
       
        <activity
             android:name="in.siet.secure.sgi.LoginActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />              
            </intent-filter>
            <intent-filter>
  			  <action android:name="PB_PACKAGE.MESSAGE" />
  			  <category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
            
            
        </activity>
        <activity
            android:name="in.siet.secure.sgi.MainActivity"
            android:label="@string/user_list"
            android:configChanges="orientation|screenSize" >
            
    
        </activity>
     <!--   
        <receiver
            android:name="in.siet.secure.sgi..FragmentBackground"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="in.siet.secure.sgi" />
            </intent-filter>
        </receiver>
      -->    
        
		
    <!--     <service 
            android:name=".BackgroundActivity"
            android:exported="false" >
        </service>  -->
       <activity
            android:name="in.siet.secure.sgi.ChatActivity"
            android:label="@string/user_list"
            android:configChanges="orientation|screenSize"/>
    
       
       <activity android:name="com.pushbots.push.PBMsg"/>
		<activity android:name="com.pushbots.push.PBListener"/>
		<receiver
		android:name="com.google.android.gcm.GCMBroadcastReceiver"
		android:permission="com.google.android.c2dm.permission.SEND" >
    		<intent-filter>
        		<!-- Receives the actual messages. -->
		        <action android:name="com.google.android.c2dm.intent.RECEIVE" />
		        <!-- Receives the registration id. -->
		        <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
		        <category android:name="in.siet.secure.sgi" />
    		</intent-filter>
		</receiver>
		<receiver android:name="com.pushbots.push.MsgReceiver" />
		<service android:name="com.pushbots.push.GCMIntentService" />
		<service android:name="org.openudid.OpenUDID_service" >
    		<intent-filter>
        		<action android:name="org.openudid.GETUDID" />
    		</intent-filter>
		</service>
       
       
    </application>

</manifest>
